!URxvt.font:            xft:Liberation Mono:style=Regular:pixelsize=16,xft:DejaVu Sans Mono:autohint=true:size=13
!URxvt.font:            xft:Liberation Mono:style=Regular:pixelsize=16,xft:DejaVu Sans Mono:autohint=true:size=13,xft:PowerlineSymbols:size=13
!URxvt.font:            xft:DejaVu Sans Mono:autohint=true:size=13
!URxvt.font:            xft:Hack:style=Regular:pixelsize=18
!URxvt.font:      9x15,xft:TerminessTTFNerdFontMono,xft:DejaVu Sans Mono:autohint=true:size=12

URxvt.font:           xft:DejaVu Sans Mono for Powerline:size=14

!! Extensions
URxvt.perl-ext-common:  default,matcher,url-select,keyboard-select,selection-to-clipboard,pasta
!! resize-font (did not want to spend dime searching for the perl)
URxvt.colorUL:          #4682B4
!! url-select
URxvt.keysym.M-u:       perl:url-select:select_next
URxvt.url-select.launcher: linkhandler
URxvt.url-select.underline: true
!! resize-font
URxvt.resize-font.smaller:      C-Down
URxvt.resize-font.bigger:       C-Up
!! Matcher
URxvt.url-launcher:     linkhandler
URxvt.matcher.button:   1
URxvt.scrollBar:        false
! Keyboard select
URxvt.keysym.M-s: perl:keyboard-select:search
!! Cursor word movement
URxvt*altSendsEscape: true
URxvt.keysym.Control-Up:   \033[1;5A
URxvt.keysym.Control-Down:    \033[1;5B
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C
!! Copy-Paste
URxvt.clipboard.autocopy: true
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.C-C: perl:clipboard:copy
URxvt.keysym.C-V: perl:clipboard:paste
URxvt.keysym.Control-Shift-V    : perl:pasta:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.copyCommand: xsel -ib
URxvt.pasteCommand: xsel -ob
!! Font resize
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal